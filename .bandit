[bandit]
# Only skip specific checks with good justification
skips:
  - B101,
  - B404,
  - B603,

# Exclude directories that don't need security scanning
exclude:
    tests/,
    docs/,
    .venv/,
    venv/,
    build/,
    dist/

# Target directory (matches your hook args)
targets: .

# Aggressiveness level (default is 'low')
level: low

# Output format (default is 'screen')
output_format: screen

# Number of lines to show around issues (default is 5)
lines: 3

# Confidence filters (default includes all confidence levels)
confidence:
    high,
    medium,
    low
